{
  "compilerOptions": {
    "types": ["node", "express"],
    "target": "ES2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleDetection": "force",
  },
  
  "include": ["src/**/*.ts", "src/server.ts"],
}
